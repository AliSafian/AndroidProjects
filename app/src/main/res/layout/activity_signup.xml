<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.facefive.meetbook.SignupActivity">
     <ScrollView
         android:layout_width="match_parent"
         android:layout_height="match_parent">

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">


             <Button
                 android:id="@+id/btn_su_next"
                 android:layout_width="200dp"
                 android:layout_height="40dp"
                 android:layout_below="@+id/sp_uni"
                 android:layout_centerHorizontal="true"
                 android:layout_marginTop="30dp"
                 android:background="@drawable/rounded_btn"
                 android:clickable="true"
                 android:focusable="true"
                 android:text="NEXT"
                 android:textColor="@android:color/white" />

             <EditText
                 android:id="@+id/fNameET"
                 android:layout_width="match_parent"
                 android:layout_height="40dp"
                 android:layout_below="@+id/textView22"
                 android:layout_marginEnd="15dp"
                 android:layout_marginStart="15dp"
                 android:backgroundTint="@android:color/white"
                 android:inputType="textPersonName"
                 android:textColor="@android:color/white"
                 android:textSize="14sp" />

             <EditText
                 android:id="@+id/email_signupET"
                 android:layout_width="match_parent"
                 android:layout_height="40dp"
                 android:layout_below="@+id/textView24"
                 android:layout_marginEnd="15dp"
                 android:layout_marginStart="15dp"
                 android:backgroundTint="@android:color/white"
                 android:inputType="textEmailAddress"
                 android:textColor="@android:color/white"
                 android:textSize="14sp" />

             <EditText
                 android:id="@+id/pass_signupET"
                 android:layout_width="match_parent"
                 android:layout_height="40dp"
                 android:layout_below="@+id/textView25"
                 android:layout_marginEnd="15dp"
                 android:layout_marginStart="15dp"
                 android:backgroundTint="@android:color/white"

                 android:inputType="textPassword"
                 android:textColor="@android:color/white"
                 android:textSize="14sp" />

             <EditText
                 android:id="@+id/confPass_signupET"
                 android:layout_width="match_parent"
                 android:layout_height="40dp"
                 android:layout_below="@+id/textView26"
                 android:layout_marginEnd="15dp"
                 android:layout_marginStart="15dp"
                 android:backgroundTint="@android:color/white"
                 android:inputType="textPassword"
                 android:textColor="@android:color/white"
                 android:textSize="14sp" />

             <TextView
                 android:id="@+id/textView22"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignStart="@+id/fNameET"
                 android:layout_marginTop="30dp"
                 android:text="Name"
                 android:textColor="@android:color/white"
                 android:textStyle="bold" />

             <TextView
                 android:id="@+id/textView24"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignEnd="@+id/textView22"
                 android:layout_below="@+id/fNameET"
                 android:layout_marginTop="15dp"
                 android:text="Email"
                 android:textColor="@android:color/white"
                 android:textStyle="bold" />

             <TextView
                 android:id="@+id/textView25"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignStart="@+id/pass_signupET"
                 android:layout_below="@+id/email_signupET"
                 android:layout_marginTop="15dp"
                 android:text="Password"
                 android:textColor="@android:color/white"
                 android:textStyle="bold" />

             <TextView
                 android:id="@+id/textView26"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignStart="@+id/confPass_signupET"
                 android:layout_below="@+id/pass_signupET"
                 android:layout_marginTop="14dp"
                 android:text="Confirm Password"
                 android:textColor="@android:color/white"
                 android:textStyle="bold" />

             <Spinner
                 android:id="@+id/sp_uni"
                 android:layout_width="match_parent"
                 android:layout_height="40dp"
                 android:layout_below="@+id/textView27"
                 android:layout_marginEnd="15dp"
                 android:layout_marginStart="15dp"
                 android:backgroundTint="@android:color/white"
                 />

             <TextView
                 android:id="@+id/textView27"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignStart="@+id/sp_uni"
                 android:layout_below="@+id/confPass_signupET"
                 android:layout_marginTop="15dp"
                 android:text="Select University"
                 android:textColor="@android:color/white"
                 android:textStyle="bold" />

         </RelativeLayout>
     </ScrollView>
</RelativeLayout>