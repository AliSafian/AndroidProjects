<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/_1_linearlayout_slotsinglerow_xml">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="Timing: 01:00 - 03:00"
            android:id="@+id/duration_tv_slotsinglerow_xml"
            android:textSize="25dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/slottype_rg_slotsinglerow_xml"
        android:layout_below="@id/_1_linearlayout_slotsinglerow_xml"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lh_rb_slotsinglerow_xml"
            android:text="Lecture"
            android:textSize="20dp"></RadioButton>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mh_rb_slotsinglerow_xml"
            android:layout_marginLeft="20dp"
            android:text="Meeting"
            android:textSize="20dp"></RadioButton>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fh_rb_slotsinglerow_xml"
            android:layout_marginLeft="20dp"
            android:text="Free"
            android:textSize="20dp">

        </RadioButton>
    </RadioGroup>

</RelativeLayout>
