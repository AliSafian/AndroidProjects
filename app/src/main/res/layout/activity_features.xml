<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@color/colorPrimaryDark"
    tools:context=".FeaturesActivity">

            <GridLayout
                android:layout_gravity="center_vertical"
                android:columnCount="2"
                android:rowCount="3"
                android:columnOrderPreserved="false"
                android:alignmentMode="alignMargins"
                android:layout_marginTop="20dp"
                android:layout_weight="9"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="15dp">

                <!--Row 1-->
                <!--Column 1-->
                <android.support.v7.widget.CardView

                    android:id="@+id/cv_messages"
                    android:layout_height="0dp"
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@android:color/white"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginVertical="16dp"
                        android:orientation="vertical">

                        <ImageView
                            android:src="@drawable/ic_message_color"
                            android:layout_gravity="center"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:text="Messages"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center_horizontal"
                            android:textAlignment="center"
                            android:textSize="18sp"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <!--Column 2-->
                <android.support.v7.widget.CardView


                    android:id="@+id/cv_timetable"
                    android:layout_height="0dp"
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@android:color/white"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginVertical="16dp"
                        android:orientation="vertical">

                        <ImageView
                            android:src="@drawable/timetable_color"
                            android:layout_gravity="center"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:text="Timetable"

                            android:layout_marginTop="5dp"
                            android:layout_gravity="center_horizontal"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textSize="18sp"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <!--Row 2-->
                <!--Column 1-->
                <android.support.v7.widget.CardView
                    android:id="@+id/cv_meeting"
                    android:layout_height="0dp"
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@android:color/white"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginVertical="16dp"
                        android:orientation="vertical">

                        <ImageView
                            android:src="@drawable/meeting_color"
                            android:layout_gravity="center"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:text="Meetings"
                            android:textStyle="bold"
                            android:textAlignment="center"

                            android:layout_marginTop="5dp"
                            android:layout_gravity="center_horizontal"
                            android:textSize="18sp"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <!--Column 2-->
                <android.support.v7.widget.CardView

                    android:id="@+id/cv_connection"
                    android:layout_height="0dp"
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@android:color/white"
                    >

                    <LinearLayout


                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginVertical="16dp"
                        android:orientation="vertical">

                        <ImageView
                            android:src="@drawable/connection_color"
                            android:layout_gravity="center"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:text="Connections"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center_horizontal"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <!--Row 3-->
                <!--Column 1-->
                <android.support.v7.widget.CardView


                    android:id="@+id/cv_notification"
                    android:layout_height="0dp"
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@android:color/white"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|center_vertical"
                       android:layout_marginVertical="16dp"
                        android:orientation="vertical">

                        <ImageView
                            android:src="@drawable/notification_color"
                            android:layout_gravity="center"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:text="Notifications"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center_horizontal"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <!--Column 2-->
                <android.support.v7.widget.CardView


                    android:id="@+id/cv_send_update"
                    android:layout_height="0dp"
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@android:color/white"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginVertical="16dp"
                        android:orientation="vertical">

                        <ImageView
                            android:src="@drawable/update_color"
                            android:layout_gravity="center"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_margin="5dp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@android:color/black"
                            android:text="Send Updates"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center_horizontal"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>


            </GridLayout>

</LinearLayout>