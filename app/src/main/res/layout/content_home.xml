<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.facefive.meetbook.HomeActivity"
    tools:showIn="@layout/app_bar_home">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ashar"/>
        <TextView
            android:id="@+id/tv_home_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:background="@drawable/circle_bg"
            android:text="Ali Safian"
            android:textSize="20dp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/tv_home_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:background="@drawable/circle_bg"
            android:text="Ali Safian"
            android:textSize="20dp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/tv_home_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:background="@drawable/circle_bg"
            android:text="Ali Safian"
            android:textSize="20dp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/tv_home_picName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:background="@drawable/circle_bg"
            android:text="Ali Safian"
            android:textSize="20dp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/tv_home_uniName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:background="@drawable/circle_bg"
            android:text="Ali Safian"
            android:textSize="20dp"
            android:textAlignment="center"/>



    </LinearLayout>

</RelativeLayout>
