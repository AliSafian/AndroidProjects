<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.facefive.meetbook.SetSlotActivity">


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="14dp"
        android:text="Edit Slot:"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:layout_marginStart="34dp"
        android:layout_marginTop="22dp"
        android:text="Day:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@+id/textView7"
        android:layout_toEndOf="@+id/textView6"

        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/tv_day"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="30dp">

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/et_header"
            android:layout_alignBottom="@+id/et_header"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:text="Header:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_header"
            android:width="200dp"
            android:height="50dp" />


        <EditText
            android:id="@+id/st_2"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/et_header"
            android:layout_marginEnd="37dp"
            android:layout_marginTop="53dp"
            android:clickable="true"
            android:drawableRight="@android:drawable/arrow_down_float"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="To"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/st_1"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/st_2"
            android:layout_alignBottom="@+id/st_2"
            android:layout_alignStart="@+id/tv_header"
            android:layout_marginStart="31dp"
            android:clickable="true"
            android:drawableRight="@android:drawable/arrow_down_float"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="From"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/relativeLayout2"
        android:layout_below="@+id/relativeLayout2"
        android:layout_marginTop="44dp"
        android:text="Ok"
        android:id="@+id/btn_ok" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_ok"
        android:layout_alignBottom="@+id/btn_ok"
        android:layout_alignStart="@+id/textView6"
        android:text="Cancel" />

</RelativeLayout>
