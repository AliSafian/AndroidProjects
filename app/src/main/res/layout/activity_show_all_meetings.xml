<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/allmeet_card1"

        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:id="@+id/all_meetings_request1"
            >

        <RelativeLayout
            android:id="@+id/layout_showmeet_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/showmeet_img"
                android:layout_width="70dp"

                android:layout_height="70dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"

                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/userpic" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_showmeet_name_plus_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/layout_showmeet_img"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-thin"
                android:text="Shahid Kanwal"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginTop="12dp"
                    android:text="45 minuts ago"
                    android:textSize="13sp" />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_showmeet_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_showmeet_name_plus_time"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/layout_showmeet_img"
            android:gravity="left">

            <TextView
                android:id="@+id/showmeet_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif-light"
                android:maxLines="1"
                android:text="I have an urgent meeting for you kindly response"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />
        </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/allmeet_card2"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/allmeet_card1"

        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:id="@+id/all_meetings_request2"
            >

            <RelativeLayout
                android:id="@+id/layout_showmeet_img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/showmeet_img2"
                    android:layout_width="70dp"

                    android:layout_height="70dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"

                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/userpic" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layout_showmeet_name_plus_time2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/layout_showmeet_img2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-thin"
                    android:text="Usama Awan"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:layout_marginTop="12dp"
                        android:text="yesterday"
                        android:textSize="13sp" />
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_showmeet_subject2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_showmeet_name_plus_time2"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/layout_showmeet_img2"
                android:gravity="left">

                <TextView
                    android:id="@+id/showmeet_subject2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="sans-serif-light"
                    android:maxLines="1"
                    android:text="I have my lecture issu so i want to resolve."
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>



</RelativeLayout>
