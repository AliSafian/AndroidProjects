<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_no_connection"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_no_internet_connection"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textAlignment="center"
        android:layout_marginTop="10dp"

        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/iv_no_connection"
        android:text="No internet connection. Make sure you Wifi or Cellular data in turnned on"/>
</RelativeLayout>