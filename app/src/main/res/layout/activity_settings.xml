<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.facefive.meetbook.activities.SettingsActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/layout_pic"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@android:color/white"
                    android:padding="6dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/circleImageView"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_centerHorizontal="true"
                        app:civ_border_color="@android:color/black"
                        app:civ_border_width="3dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="11dp"
                        android:src="@drawable/ic_dp_demo" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/circleImageView"
                        android:clickable="true"
                        android:text="Amina Naeem"
                        android:textColor="@color/colorText"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/name"
                        android:layout_gravity="center"
                        android:text="bsef14044@pucit.edu.pk"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/layout_notification"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@+id/layout_pic"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/white"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                   >


                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="38dp"
                        android:layout_marginTop="26dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_menu_notifications" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imageView2"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@+id/imageView2"
                        android:text="Notification"
                        android:textSize="20dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/layout_privacy"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@+id/layout_notification"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/white"
                    android:orientation="horizontal"

                    android:layout_marginBottom="8dp"
                   >

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="38dp"
                        android:layout_marginTop="26dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_privacy" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imageView3"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@+id/imageView3"
                        android:text="Privacy"
                        android:textSize="20dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_change_pass"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/layout_privacy"
                    android:background="@android:color/white"
                    android:orientation="horizontal"

                    android:layout_marginBottom="8dp"
                   >

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="38dp"
                        android:layout_marginTop="26dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_password" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imageView4"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@+id/imageView4"
                        android:text="Change Password"
                        android:textSize="20dp" />
                </RelativeLayout>

                <RelativeLayout
                android:id="@+id/layout_logout"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/layout_change_pass"
                android:background="@android:color/white"
                android:orientation="horizontal"

                android:layout_marginBottom="8dp"
                >

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="26dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_menu_logout" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView6"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@+id/imageView6"
                    android:text="Logout"
                    android:textSize="20dp" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
