<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.facefive.meetbook.AddSubscriberActivity">

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/emal"
        android:layout_marginTop="36dp"
        android:text="Email"
        android:textColor="@color/colorPrimaryDark" />

    <EditText
        android:id="@+id/emal"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:ems="15"
        android:inputType="textEmailAddress"
        android:text="" />

    <Button
        android:id="@+id/add"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/emal"
        android:layout_below="@+id/textView19"
        android:layout_marginTop="26dp"
        android:background="@drawable/rounded_btn"
        android:text="Send Invite"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/emal"
        android:layout_alignStart="@+id/emal"
        android:layout_below="@+id/emal"
        android:layout_marginTop="11dp"
        android:ems="15"
        android:text="In case of more than one emails, separate them with a space" />
</RelativeLayout>
