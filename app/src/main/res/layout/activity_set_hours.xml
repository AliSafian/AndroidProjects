<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.facefive.meetbook.SetHoursActivity">

    <TextView
        android:id="@+id/select_tv_selecthours_xml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="17dp"
        android:text="Edit Slots for counselling:"
        android:textColor="@color/colorHeading"
        android:textSize="18sp"
        android:textStyle="bold" />


    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_tv_selecthours_xml"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:background="@color/colorAccent">

        <CheckBox
            android:id="@+id/select1_rb_sethours_xml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:checked="false"
            android:layout_alignTop="@+id/st12_et_sethours_xml"
            android:layout_marginStart="14dp" />

        <EditText
            android:id="@+id/st11_et_sethours_xml"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/select1_rb_sethours_xml"
            android:layout_alignBottom="@+id/select1_rb_sethours_xml"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/select1_rb_sethours_xml"
            android:clickable="true"
            android:drawableRight="@android:drawable/arrow_down_float"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="From"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/st12_et_sethours_xml"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="70dp"
            android:layout_marginTop="18dp"
            android:layout_toEndOf="@+id/st11_et_sethours_xml"
            android:clickable="true"
            android:drawableRight="@android:drawable/arrow_down_float"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="To"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:background="@color/colorAccent">

        <CheckBox
            android:id="@+id/select2_rb_sethours_xml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:checked="false"
            android:layout_marginStart="14dp" />
        <EditText
            android:id="@+id/st21_et_sethours_xml"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/st22_et_sethours_xml"
            android:layout_alignBottom="@+id/st22_et_sethours_xml"
            android:layout_alignParentStart="true"
            android:layout_marginStart="60dp"
            android:clickable="true"
            android:drawableRight="@android:drawable/arrow_down_float"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="From"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/st22_et_sethours_xml"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="70dp"
            android:layout_marginTop="18dp"
            android:layout_toEndOf="@+id/st21_et_sethours_xml"
            android:clickable="true"
            android:drawableRight="@android:drawable/arrow_down_float"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="To"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:background="@color/colorAccent">

        <CheckBox
            android:id="@+id/select3_rb_sethours_xml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp" />
        <EditText
            android:id="@+id/st31_et_sethours_xml"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/st32_et_sethours_xml"
            android:layout_alignBottom="@+id/st32_et_sethours_xml"
            android:layout_alignParentStart="true"
            android:layout_marginStart="60dp"
            android:clickable="true"
            android:drawableRight="@android:drawable/arrow_down_float"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="From"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/st32_et_sethours_xml"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="70dp"
            android:layout_marginTop="18dp"
            android:layout_toEndOf="@+id/st31_et_sethours_xml"
            android:clickable="true"
            android:drawableRight="@android:drawable/arrow_down_float"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="To"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:background="@color/colorAccent">

        <CheckBox
            android:id="@+id/select4_rb_sethours_xml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/st42_et_sethours_xml"
            android:layout_marginStart="15dp" />

        <EditText
            android:id="@+id/st41_et_sethours_xml"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/select4_rb_sethours_xml"
            android:layout_marginStart="19dp"
            android:layout_toEndOf="@+id/select4_rb_sethours_xml"
            android:clickable="true"
            android:drawableRight="@android:drawable/arrow_down_float"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="From"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/st42_et_sethours_xml"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="70dp"
            android:layout_marginTop="18dp"
            android:layout_toEndOf="@+id/st41_et_sethours_xml"
            android:clickable="true"
            android:drawableRight="@android:drawable/arrow_down_float"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="To"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/ok_btn_selecthours_xml"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@+id/layout4"
        android:layout_marginTop="52dp"
        android:layout_toEndOf="@+id/select_tv_selecthours_xml"
        android:background="@drawable/rounded_btn"
        android:text="Ok"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/cancel_btn_selecthours_xml"
        android:layout_width="150dp"
        android:layout_height="30dp"

        android:layout_alignStart="@+id/select_tv_selecthours_xml"
        android:layout_alignTop="@+id/ok_btn_selecthours_xml"
        android:background="@drawable/rounded_btn"
        android:text="Cancel"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</RelativeLayout>
