<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".activities.ChangePictureActivity"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/iv_profile_picture"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/white" />
            <Button
                android:id="@+id/btn_crop_picture"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@android:color/holo_red_light"
                android:text="Crop Photo"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:layout_below="@+id/iv_profile_picture"

                android:textSize="20dp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/btn_change_picture"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="50dp"
                android:text="Change Photo"
                android:textStyle="normal"
                android:textSize="20dp"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:layout_below="@+id/btn_crop_picture"
                android:layout_marginTop="10dp"
                android:background="@android:color/holo_red_light"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>