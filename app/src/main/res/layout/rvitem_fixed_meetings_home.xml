<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <android.support.v7.widget.CardView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="5dp"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">
            <ImageView
                android:id="@+id/image_rv"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_dp_demo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_margin="2dp"
                android:layout_height="25dp"
                android:textAlignment="center"
                android:id="@+id/name_rv"
                android:text="Name"
                android:textSize="18sp"
                android:textColor="@android:color/holo_green_light"
                android:layout_below="@+id/image_rv"/>
            <TextView
                android:id="@+id/purpose_rv"
                android:layout_width="match_parent"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:text="Subject for meetinf"
                android:textColor="@android:color/holo_red_light"
                android:maxLines="1"
                android:layout_below="@+id/name_rv"/>
            <TextView
                android:id="@+id/descrotion_rv"
                android:layout_width="match_parent"
                android:layout_margin="2dp"
                android:textSize="12sp"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:text="Monday at 14:00"
                android:layout_below="@+id/purpose_rv"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>